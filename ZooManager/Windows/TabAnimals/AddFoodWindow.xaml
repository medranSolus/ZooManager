        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,0,0,68" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="10,0,0,37" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Button Content="Add new food" Margin="10,0,12,12" FontWeight="Bold" Click="Button_Click" Height="20" VerticalAlignment="Bottom"/>
        <TextBox Name="textBoxName" Height="23" Margin="70,0,12,68" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom"/>
        <TextBox Name="textBoxAmount" Height="23" Margin="70,0,12,40" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
