<Window x:Class="ZooManager.Windows.TabWorkers.SubmitOvertimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Submit overtime" Height="137" Width="179" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Topmost="True">
    <Grid>
        <Button Content="Submit" Margin="10,0,10,10" FontWeight="Bold" Click="Button_Click" Height="26" VerticalAlignment="Bottom"/>
        <TextBox x:Name="textBoxHours" Height="23" Margin="62,0,10,72" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Label Content="Hours:" HorizontalAlignment="Left" Margin="10,0,0,72" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Content="Day:" HorizontalAlignment="Left" Margin="10,0,0,41" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <DatePicker x:Name="datePickerDate" DisplayDateEnd="{x:Static sys:DateTime.Now}" Margin="50,0,10,41" VerticalAlignment="Bottom" FirstDayOfWeek="Monday"/>
    </Grid>
</Window>
